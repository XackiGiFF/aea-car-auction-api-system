NODE_ENV=production
PORT=3010

# Token for internal media API (parser -> media bot)
MEDIA_ACCESS_TOKEN=change_me_long_random_token

# Where files are stored inside container
MEDIA_ROOT=/app/media

# Public URL prefix returned to clients and stored in DB
MEDIA_PUBLIC_BASE_URL=https://asiaexpressauto.ru/cdn/media

# Restrict donor hosts
MEDIA_ALLOWED_HOSTS=2sc2.autoimg.cn,2sc1.autoimg.cn,2sc3.autoimg.cn

# Donor fetch headers
MEDIA_SOURCE_REFERER=https://www.che168.com/
MEDIA_SOURCE_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/140.0.0.0 Safari/537.36

MEDIA_TIMEOUT_MS=25000
MEDIA_MAX_BYTES=20971520
