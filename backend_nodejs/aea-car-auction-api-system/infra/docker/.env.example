# Docker Compose project and shared network
COMPOSE_PROJECT_NAME=simpleweb
AEA_NETWORK_NAME=aea_network
AEA_NETWORK_MTU=1450
LEGACY_SITE_NETWORK_NAME=simpleweb_aea_network

# GitHub org/user for GHCR image path: ghcr.io/<org>/<service>:<tag>
GITHUB_ORG=your-github-org

# Image tags
API_GATEWAY_TAG=latest
CALC_BOT_TAG=latest
CHE_PARSER_BOT_TAG=latest
SYNC_BOT_TAG=latest
CDN_MEDIA_BOT_TAG=latest

# API gateway is internal-only in prod stack (no host port bind).
# Route traffic from site nginx via Docker network alias: api-gateway-v2:3000
NODE_ENV=production
CDN_MEDIA_BOT_PORT=3010

# MariaDB bootstrap
MYSQL_ROOT_PASSWORD=change_me_root
MYSQL_DATABASE=aea_api
MYSQL_USER=aea_user
MYSQL_PASSWORD=change_me_user
